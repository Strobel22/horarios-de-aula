<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#6EB7E0">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Horários de Aula"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textStyle="bold"
        android:paddingBottom="30dp"
        android:paddingTop="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Segunda: 8:00 – 9:00 AM"
        android:textSize="20sp"
        android:padding="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terça: 10:00 – 11:00 AM"
        android:textSize="20sp"
        android:padding="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quarta: 11:00 – 12:00 PM"
        android:textSize="20sp"
        android:padding="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quinta: 2:00 – 3:00 PM"
        android:textSize="20sp"
        android:padding="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:text="Sexta: 3:00 – 4:00 PM"
        android:textSize="20sp" />

</LinearLayout>